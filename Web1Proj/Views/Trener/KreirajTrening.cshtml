@using Web1Proj.Models

<head>
    <style>

        body {
            margin: 0px;
            overflow: hidden;
        }

        .backcontainer {
            width: 100%;
            margin: auto;
            background-color: aquamarine;
            height: 100vh;
            padding: 50px;
        }

        .container {
            padding: 20px;
            background-color: lavender;
            width: 30%;
            margin: auto;
            border-radius: 4px
        }

        input[type=text], [type=password], input[type=email] {
            width: 100%;
            padding: 10px 15px; 
            margin: 10px 0px; 
            display: inline-block;
            border-radius: 4px; 
            border: 1px solid #000000;
            box-sizing: border-box; 
        }

        select, input[type=date] {
            width: 100%;
            padding: 10px 20px; 
            margin: 10px 0px; 
            display: inline-block;
            border-radius: 4px;
            border: 1px solid #000000;
            box-sizing: border-box; 
        }

        input[type=submit], input[type=button] {
            width: 100%;
            margin: 0px 0px 5px 0px;
            background-color: palevioletred;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class=" backcontainer">
        <div class="col-lg-offset-5">
            @{
                if (ViewBag.Message != "")
                {
                    <h2>@ViewBag.Message</h2>
                }
            }
                    <div class="container">
                        <form action="/Trener/KreirajTrening" method="post">
                            <div class="form-group">
                                <label for="naziv">Naziv:</label>
                                <input type="text" class="form-control" name="naziv" />
                            </div>


                            <div class="form-group">
                                <label for="tip">Tip:</label>
                                @{
                                    <select name="tip" class="form-control">
                                        <option value="@Enums.TipTreninga.BodyPump">Body pump</option>
                                        <option value="@Enums.TipTreninga.LesMillsTone">Les mills tone</option>
                                        <option value="@Enums.TipTreninga.Yoga">Yoga</option>
                                    </select>
                                }
                            </div>


                            <div class="form-group">
                                <label for="trajanje">Trajanje:</label>
                                <input type="text" class="form-control" name="trajanje" />
                            </div>


                            <div class="form-group">
                                <label for="ucesnika">Maksimalan broj posetilaca</label>
                                <input type="text" class="form-control" name="ucesnika" />
                            </div>


                            <div class="form-group">
                                <label for="vremeTreninga">Vreme odrzavanja:</label>
                                <input type="datetime-local" class="form-control" name="datum" required />
                            </div>


                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" value="Dodaj" />

                                <a href="/Home/Index"><input type="button" style="background-color:red; cursor:pointer;" value="Otkazi" /></a>
                            </div>



                        </form>
                    </div>
        </div>
    </div>
</body>