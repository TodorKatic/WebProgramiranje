@using Web1Proj.Models
@{ 
    IEnumerable<Posetilac> posetioci = (IEnumerable<Posetilac>)HttpContext.Current.Application["PosetiociPrikaz"];
}
<html>
<style>
    * {
        box-sizing: border-box;
    }

    .navbar {
        width: 100%;
        background-color: rebeccapurple;
        overflow: auto;
        border-radius: 4px;
        margin-bottom: 20px;
    }

        .navbar a {
            float: left;
            width: 20%;
            padding: 12px;
            color: white;
            text-decoration: none;
            font-size: 17px;
            text-align: center;
            text-decoration: none;
        }

            .navbar a:hover {
                background-color: black;
            }

    .backcontainer {
        width: 100%;
        height: 100vh;
        background-color: aquamarine;
        border-radius: 4px;
    }

    .container {
        padding: 20px;
        background-color: aqua;
        width: 90%;
        margin: auto;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: center;
        padding: 16px;
        font-family: Arial, Helvetica, sans-serif
    }

    tr:nth-child(even) {
        background-color: goldenrod
    }
</style>
</html>
<body>
    <div class="backcontainer">
        <div class="container-fluid">
            <nav class="navbar navbar-dark bg-primary navbar-fixed-top">
                <a href="~/Home/Index" class="navbar-brand">Pocetna strana</a>
            </nav>

            @{
                if (ViewBag.Message != "")
                {
                    <h2>@ViewBag.Message</h2>
                }
            }
                    <div class="container">
                        <table class="table table-striped table-primary">
                            <tr>
                                <th>Korisnicko ime</th>
                                <th>Ime</th>
                                <th>Prezime</th>
                                <th>Pol</th>
                                <th>Email</th>
                                <th>Datum rodjenja</th>


                            </tr>
                            @{
                                foreach (var posetilac in posetioci)
                                {
                                    <tr>
                                        <td>@posetilac.KorisnickoIme</td>
                                        <td>@posetilac.Ime</td>
                                        <td>@posetilac.Prezime</td>
                                        <td>@posetilac.PolKorisnika</td>
                                        <td>@posetilac.Email</td>
                                        <td>@posetilac.DatumRodjenja</td>


                                    </tr>
                                }
                            }

                        </table>
                    </div>
        </div>
    </div>
</body>