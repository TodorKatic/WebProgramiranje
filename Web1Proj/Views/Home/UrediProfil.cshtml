@using Web1Proj.Models
@{
    Korisnik korisnik = (Korisnik)HttpContext.Current.Session["UlogovaniKorisnik"];
}
<html>
<style>
    body {
        margin: 0px;
        overflow: hidden;
    }

    .backcontainer {
        width: 100%;
        margin: auto;
        background-color: aquamarine;
        height: 100vh;
        padding: 50px;
    }

    .container {
        padding: 20px;
        background-color: lavender;
        width: 30%;
        margin: auto;
        border-radius: 4px
    }

    input[type=text], [type=password], input[type=email] {
        width: 100%;
        padding: 10px 15px; 
        margin: 10px 0px; 
        display: inline-block;
        border-radius: 4px;
        border: 1px solid #000000;
        box-sizing: border-box; 
    }

    select, input[type=date] {
        width: 100%;
        padding: 10px 20px; 
        margin: 10px 0px; 
        display: inline-block;
        border-radius: 4px; 
        border: 1px solid #000000;
        box-sizing: border-box; 
    }

    input[type=submit], input[type=button] {
        width: 100%;
        margin: 0px 0px 5px 0px;
        background-color: palevioletred;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
    }
</style>
</html>
<body>



    <div class="backcontainer">


        <div class="container">
            <form action="/Home/Uredjivanje" method="post">

                <label for="password">Password:</label>
                <input type="text" name="password" value="@korisnik.Lozinka" placeholder="password" required />
                <label for="firstname">First name:</label>
                <input type="text" name="firstName" value="@korisnik.Ime" placeholder="first name" required />
                <label for="lastname">Last name:</label>
                <input type="text" name="lastName" value="@korisnik.Prezime" placeholder="last name" required />
                <label for="email" value="@korisnik.Email">Email:</label>
                <input type="email" name="email" />
                <div class="form-group">
                    <label for="pol">Pol:</label>
                    @{
                        if (korisnik.PolKorisnika == Enums.Pol.Muski)
                        {
                            <select name="pol" class="form-control">
                                <option value="@Enums.Pol.Muski" selected>Muski</option>
                                <option value="@Enums.Pol.Zenski">Zenski</option>
                            </select>
                        }
                        else
                        {
                            <select name="pol" class="form-control">
                                <option value="@Enums.Pol.Zenski" selected>Zenski</option>
                                <option value="@Enums.Pol.Muski">Muski</option>
                            </select>
                        }
                    }
                </div>

                <input type="submit" style="cursor:pointer;" value="Edit" />
                <a href="/Home/Index"><input type="button" style="background-color:red; cursor:pointer;" value="Cancel" /></a>

            </form>

        </div>
    </div>

</body>